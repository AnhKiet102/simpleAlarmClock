<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2E67A"
    tools:context=".MainActivity">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop= "true"
        android:layout_alignParentStart="true"
        android:id="@+id/timepicker"

        />

    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A3C6EE"
        android:layout_below="@id/timepicker"
        android:text="Đặt giờ"
         />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạm dừng"
        android:background="#F05F58"
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:layout_below="@id/timepicker"
        android:layout_alignParentRight="true"
        app:layout_constraintTop_toBottomOf="@+id/timepicker" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtshow"
    android:layout_below="@id/btnSetTime"
   android:layout_centerHorizontal="true"
    android:textSize="19sp"
    android:text="Xin chào !"/>

</RelativeLayout>